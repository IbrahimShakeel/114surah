  "data": [
    {
      "number": 56,
      "name": "سورة الواقعة",
      "englishName": "Al-Waaqia",
      "englishNameTranslation": "The Inevitable",
      "revelationType": "Meccan",
      "numberOfAyahs": 96,
      "ayahs": [
        {
          "number": 4980,
          "text": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
          "numberInSurah": 1,
          "juz": 27
        },
        {
          "number": 4980,
          "text": "إِذَا وَقَعَتِ الْوَاقِعَةُ",
          "numberInSurah": 1,
          "juz": 27
        },
        {
          "number": 4981,
          "text": "لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ",
          "numberInSurah": 2,
          "juz": 27
        },
        {
          "number": 4982,
          "text": "خَافِضَةٌ رَافِعَةٌ",
          "numberInSurah": 3,
          "juz": 27
        },
        {
          "number": 4983,
          "text": "إِذَا رُجَّتِ الْأَرْضُ رَجًّا",
          "numberInSurah": 4,
          "juz": 27
        },
        {
          "number": 4984,
          "text": "وَبُسَّتِ الْجِبَالُ بَسًّا",
          "numberInSurah": 5,
          "juz": 27
        },
        {
          "number": 4985,
          "text": "فَكَانَتْ هَبَاءً مُنْبَثًّا",
          "numberInSurah": 6,
          "juz": 27
        },
        {
          "number": 4986,
          "text": "وَكُنْتُمْ أَزْوَاجًا ثَلَاثَةً",
          "numberInSurah": 7,
          "juz": 27
        },
        {
          "number": 4987,
          "text": "فَأَصْحَابُ الْمَيْمَنَةِ مَا أَصْحَابُ الْمَيْمَنَةِ",
          "numberInSurah": 8,
          "juz": 27
        },
        {
          "number": 4988,
          "text": "وَأَصْحَابُ الْمَشْأَمَةِ مَا أَصْحَابُ الْمَشْأَمَةِ",
          "numberInSurah": 9,
          "juz": 27
        },
        {
          "number": 4989,
          "text": "وَالسَّابِقُونَ السَّابِقُونَ",
          "numberInSurah": 10,
          "juz": 27
        },
        {
          "number": 4990,
          "text": "أُولَٰئِكَ الْمُقَرَّبُونَ",
          "numberInSurah": 11,
          "juz": 27
        },
        {
          "number": 4991,
          "text": "فِي جَنَّاتِ النَّعِيمِ",
          "numberInSurah": 12,
          "juz": 27
        },
        {
          "number": 4992,
          "text": "ثُلَّةٌ مِنَ الْأَوَّلِينَ",
          "numberInSurah": 13,
          "juz": 27
        },
        {
          "number": 4993,
          "text": "وَقَلِيلٌ مِنَ الْآخِرِينَ",
          "numberInSurah": 14,
          "juz": 27
        },
        {
          "number": 4994,
          "text": "عَلَىٰ سُرُرٍ مَوْضُونَةٍ",
          "numberInSurah": 15,
          "juz": 27
        },
        {
          "number": 4995,
          "text": "مُتَّكِئِينَ عَلَيْهَا مُتَقَابِلِينَ",
          "numberInSurah": 16,
          "juz": 27
        },
        {
          "number": 4996,
          "text": "يَطُوفُ عَلَيْهِمْ وِلْدَانٌ مُخَلَّدُونَ",
          "numberInSurah": 17,
          "juz": 27
        },
        {
          "number": 4997,
          "text": "بِأَكْوَابٍ وَأَبَارِيقَ وَكَأْسٍ مِنْ مَعِينٍ",
          "numberInSurah": 18,
          "juz": 27
        },
        {
          "number": 4998,
          "text": "لَا يُصَدَّعُونَ عَنْهَا وَلَا يُنْزِفُونَ",
          "numberInSurah": 19,
          "juz": 27
        },
        {
          "number": 4999,
          "text": "وَفَاكِهَةٍ مِمَّا يَتَخَيَّرُونَ",
          "numberInSurah": 20,
          "juz": 27
        },
        {
          "number": 5000,
          "text": "وَلَحْمِ طَيْرٍ مِمَّا يَشْتَهُونَ",
          "numberInSurah": 21,
          "juz": 27
        },
        {
          "number": 5001,
          "text": "وَحُورٌ عِينٌ",
          "numberInSurah": 22,
          "juz": 27
        },
        {
          "number": 5002,
          "text": "كَأَمْثَالِ اللُّؤْلُؤِ الْمَكْنُونِ",
          "numberInSurah": 23,
          "juz": 27
        },
        {
          "number": 5003,
          "text": "جَزَاءً بِمَا كَانُوا يَعْمَلُونَ",
          "numberInSurah": 24,
          "juz": 27
        },
        {
          "number": 5004,
          "text": "لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا تَأْثِيمًا",
          "numberInSurah": 25,
          "juz": 27
        },
        {
          "number": 5005,
          "text": "إِلَّا قِيلًا سَلَامًا سَلَامًا",
          "numberInSurah": 26,
          "juz": 27
        },
        {
          "number": 5006,
          "text": "وَأَصْحَابُ الْيَمِينِ مَا أَصْحَابُ الْيَمِينِ",
          "numberInSurah": 27,
          "juz": 27
        },
        {
          "number": 5007,
          "text": "فِي سِدْرٍ مَخْضُودٍ",
          "numberInSurah": 28,
          "juz": 27
        },
        {
          "number": 5008,
          "text": "وَطَلْحٍ مَنْضُودٍ",
          "numberInSurah": 29,
          "juz": 27
        },
        {
          "number": 5009,
          "text": "وَظِلٍّ مَمْدُودٍ",
          "numberInSurah": 30,
          "juz": 27
        },
        {
          "number": 5010,
          "text": "وَمَاءٍ مَسْكُوبٍ",
          "numberInSurah": 31,
          "juz": 27
        },
        {
          "number": 5011,
          "text": "وَفَاكِهَةٍ كَثِيرَةٍ",
          "numberInSurah": 32,
          "juz": 27
        },
        {
          "number": 5012,
          "text": "لَا مَقْطُوعَةٍ وَلَا مَمْنُوعَةٍ",
          "numberInSurah": 33,
          "juz": 27
        },
        {
          "number": 5013,
          "text": "وَفُرُشٍ مَرْفُوعَةٍ",
          "numberInSurah": 34,
          "juz": 27
        },
        {
          "number": 5014,
          "text": "إِنَّا أَنْشَأْنَاهُنَّ إِنْشَاءً",
          "numberInSurah": 35,
          "juz": 27
        },
        {
          "number": 5015,
          "text": "فَجَعَلْنَاهُنَّ أَبْكَارًا",
          "numberInSurah": 36,
          "juz": 27
        },
        {
          "number": 5016,
          "text": "عُرُبًا أَتْرَابًا",
          "numberInSurah": 37,
          "juz": 27
        },
        {
          "number": 5017,
          "text": "لِأَصْحَابِ الْيَمِينِ",
          "numberInSurah": 38,
          "juz": 27
        },
        {
          "number": 5018,
          "text": "ثُلَّةٌ مِنَ الْأَوَّلِينَ",
          "numberInSurah": 39,
          "juz": 27
        },
        {
          "number": 5019,
          "text": "وَثُلَّةٌ مِنَ الْآخِرِينَ",
          "numberInSurah": 40,
          "juz": 27
        },
        {
          "number": 5020,
          "text": "وَأَصْحَابُ الشِّمَالِ مَا أَصْحَابُ الشِّمَالِ",
          "numberInSurah": 41,
          "juz": 27
        },
        {
          "number": 5021,
          "text": "فِي سَمُومٍ وَحَمِيمٍ",
          "numberInSurah": 42,
          "juz": 27
        },
        {
          "number": 5022,
          "text": "وَظِلٍّ مِنْ يَحْمُومٍ",
          "numberInSurah": 43,
          "juz": 27
        },
        {
          "number": 5023,
          "text": "لَا بَارِدٍ وَلَا كَرِيمٍ",
          "numberInSurah": 44,
          "juz": 27
        },
        {
          "number": 5024,
          "text": "إِنَّهُمْ كَانُوا قَبْلَ ذَٰلِكَ مُتْرَفِينَ",
          "numberInSurah": 45,
          "juz": 27
        },
        {
          "number": 5025,
          "text": "وَكَانُوا يُصِرُّونَ عَلَى الْحِنْثِ الْعَظِيمِ",
          "numberInSurah": 46,
          "juz": 27
        },
        {
          "number": 5026,
          "text": "وَكَانُوا يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَبْعُوثُونَ",
          "numberInSurah": 47,
          "juz": 27
        },
        {
          "number": 5027,
          "text": "أَوَآبَاؤُنَا الْأَوَّلُونَ",
          "numberInSurah": 48,
          "juz": 27
        },
        {
          "number": 5028,
          "text": "قُلْ إِنَّ الْأَوَّلِينَ وَالْآخِرِينَ",
          "numberInSurah": 49,
          "juz": 27
        },
        {
          "number": 5029,
          "text": "لَمَجْمُوعُونَ إِلَىٰ مِيقَاتِ يَوْمٍ مَعْلُومٍ",
          "numberInSurah": 50,
          "juz": 27
        },
        {
          "number": 5030,
          "text": "ثُمَّ إِنَّكُمْ أَيُّهَا الضَّالُّونَ الْمُكَذِّبُونَ",
          "numberInSurah": 51,
          "juz": 27
        },
        {
          "number": 5031,
          "text": "لَآكِلُونَ مِنْ شَجَرٍ مِنْ زَقُّومٍ",
          "numberInSurah": 52,
          "juz": 27
        },
        {
          "number": 5032,
          "text": "فَمَالِئُونَ مِنْهَا الْبُطُونَ",
          "numberInSurah": 53,
          "juz": 27
        },
        {
          "number": 5033,
          "text": "فَشَارِبُونَ عَلَيْهِ مِنَ الْحَمِيمِ",
          "numberInSurah": 54,
          "juz": 27
        },
        {
          "number": 5034,
          "text": "فَشَارِبُونَ شُرْبَ الْهِيمِ",
          "numberInSurah": 55,
          "juz": 27
        },
        {
          "number": 5035,
          "text": "هَٰذَا نُزُلُهُمْ يَوْمَ الدِّينِ",
          "numberInSurah": 56,
          "juz": 27
        },
        {
          "number": 5036,
          "text": "نَحْنُ خَلَقْنَاكُمْ فَلَوْلَا تُصَدِّقُونَ",
          "numberInSurah": 57,
          "juz": 27
        },
        {
          "number": 5037,
          "text": "أَفَرَأَيْتُمْ مَا تُمْنُونَ",
          "numberInSurah": 58,
          "juz": 27
        },
        {
          "number": 5038,
          "text": "أَأَنْتُمْ تَخْلُقُونَهُ أَمْ نَحْنُ الْخَالِقُونَ",
          "numberInSurah": 59,
          "juz": 27
        },
        {
          "number": 5039,
          "text": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ الْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ",
          "numberInSurah": 60,
          "juz": 27
        },
        {
          "number": 5040,
          "text": "عَلَىٰ أَنْ نُبَدِّلَ أَمْثَالَكُمْ وَنُنْشِئَكُمْ فِي مَا لَا تَعْلَمُونَ",
          "numberInSurah": 61,
          "juz": 27
        },
        {
          "number": 5041,
          "text": "وَلَقَدْ عَلِمْتُمُ النَّشْأَةَ الْأُولَىٰ فَلَوْلَا تَذَكَّرُونَ",
          "numberInSurah": 62,
          "juz": 27
        },
        {
          "number": 5042,
          "text": "أَفَرَأَيْتُمْ مَا تَحْرُثُونَ",
          "numberInSurah": 63,
          "juz": 27
        },
        {
          "number": 5043,
          "text": "أَأَنْتُمْ تَزْرَعُونَهُ أَمْ نَحْنُ الزَّارِعُونَ",
          "numberInSurah": 64,
          "juz": 27
        },
        {
          "number": 5044,
          "text": "لَوْ نَشَاءُ لَجَعَلْنَاهُ حُطَامًا فَظَلْتُمْ تَفَكَّهُونَ",
          "numberInSurah": 65,
          "juz": 27
        },
        {
          "number": 5045,
          "text": "إِنَّا لَمُغْرَمُونَ",
          "numberInSurah": 66,
          "juz": 27
        },
        {
          "number": 5046,
          "text": "بَلْ نَحْنُ مَحْرُومُونَ",
          "numberInSurah": 67,
          "juz": 27
        },
        {
          "number": 5047,
          "text": "أَفَرَأَيْتُمُ الْمَاءَ الَّذِي تَشْرَبُونَ",
          "numberInSurah": 68,
          "juz": 27
        },
        {
          "number": 5048,
          "text": "أَأَنْتُمْ أَنْزَلْتُمُوهُ مِنَ الْمُزْنِ أَمْ نَحْنُ الْمُنْزِلُونَ",
          "numberInSurah": 69,
          "juz": 27
        },
        {
          "number": 5049,
          "text": "لَوْ نَشَاءُ جَعَلْنَاهُ أُجَاجًا فَلَوْلَا تَشْكُرُونَ",
          "numberInSurah": 70,
          "juz": 27
        },
        {
          "number": 5050,
          "text": "أَفَرَأَيْتُمُ النَّارَ الَّتِي تُورُونَ",
          "numberInSurah": 71,
          "juz": 27
        },
        {
          "number": 5051,
          "text": "أَأَنْتُمْ أَنْشَأْتُمْ شَجَرَتَهَا أَمْ نَحْنُ الْمُنْشِئُونَ",
          "numberInSurah": 72,
          "juz": 27
        },
        {
          "number": 5052,
          "text": "نَحْنُ جَعَلْنَاهَا تَذْكِرَةً وَمَتَاعًا لِلْمُقْوِينَ",
          "numberInSurah": 73,
          "juz": 27
        },
        {
          "number": 5053,
          "text": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ",
          "numberInSurah": 74,
          "juz": 27
        },
        {
          "number": 5054,
          "text": "۞ فَلَا أُقْسِمُ بِمَوَاقِعِ النُّجُومِ",
          "numberInSurah": 75,
          "juz": 27
        },
        {
          "number": 5055,
          "text": "وَإِنَّهُ لَقَسَمٌ لَوْ تَعْلَمُونَ عَظِيمٌ",
          "numberInSurah": 76,
          "juz": 27
        },
        {
          "number": 5056,
          "text": "إِنَّهُ لَقُرْآنٌ كَرِيمٌ",
          "numberInSurah": 77,
          "juz": 27
        },
        {
          "number": 5057,
          "text": "فِي كِتَابٍ مَكْنُونٍ",
          "numberInSurah": 78,
          "juz": 27
        },
        {
          "number": 5058,
          "text": "لَا يَمَسُّهُ إِلَّا الْمُطَهَّرُونَ",
          "numberInSurah": 79,
          "juz": 27
        },
        {
          "number": 5059,
          "text": "تَنْزِيلٌ مِنْ رَبِّ الْعَالَمِينَ",
          "numberInSurah": 80,
          "juz": 27
        },
        {
          "number": 5060,
          "text": "أَفَبِهَٰذَا الْحَدِيثِ أَنْتُمْ مُدْهِنُونَ",
          "numberInSurah": 81,
          "juz": 27
        },
        {
          "number": 5061,
          "text": "وَتَجْعَلُونَ رِزْقَكُمْ أَنَّكُمْ تُكَذِّبُونَ",
          "numberInSurah": 82,
          "juz": 27
        },
        {
          "number": 5062,
          "text": "فَلَوْلَا إِذَا بَلَغَتِ الْحُلْقُومَ",
          "numberInSurah": 83,
          "juz": 27
        },
        {
          "number": 5063,
          "text": "وَأَنْتُمْ حِينَئِذٍ تَنْظُرُونَ",
          "numberInSurah": 84,
          "juz": 27
        },
        {
          "number": 5064,
          "text": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنْكُمْ وَلَٰكِنْ لَا تُبْصِرُونَ",
          "numberInSurah": 85,
          "juz": 27
        },
        {
          "number": 5065,
          "text": "فَلَوْلَا إِنْ كُنْتُمْ غَيْرَ مَدِينِينَ",
          "numberInSurah": 86,
          "juz": 27
        },
        {
          "number": 5066,
          "text": "تَرْجِعُونَهَا إِنْ كُنْتُمْ صَادِقِينَ",
          "numberInSurah": 87,
          "juz": 27
        },
        {
          "number": 5067,
          "text": "فَأَمَّا إِنْ كَانَ مِنَ الْمُقَرَّبِينَ",
          "numberInSurah": 88,
          "juz": 27
        },
        {
          "number": 5068,
          "text": "فَرَوْحٌ وَرَيْحَانٌ وَجَنَّتُ نَعِيمٍ",
          "numberInSurah": 89,
          "juz": 27
        },
        {
          "number": 5069,
          "text": "وَأَمَّا إِنْ كَانَ مِنْ أَصْحَابِ الْيَمِينِ",
          "numberInSurah": 90,
          "juz": 27
        },
        {
          "number": 5070,
          "text": "فَسَلَامٌ لَكَ مِنْ أَصْحَابِ الْيَمِينِ",
          "numberInSurah": 91,
          "juz": 27
        },
        {
          "number": 5071,
          "text": "وَأَمَّا إِنْ كَانَ مِنَ الْمُكَذِّبِينَ الضَّالِّينَ",
          "numberInSurah": 92,
          "juz": 27
        },
        {
          "number": 5072,
          "text": "فَنُزُلٌ مِنْ حَمِيمٍ",
          "numberInSurah": 93,
          "juz": 27
        },
        {
          "number": 5073,
          "text": "وَتَصْلِيَةُ جَحِيمٍ",
          "numberInSurah": 94,
          "juz": 27
        },
        {
          "number": 5074,
          "text": "إِنَّ هَٰذَا لَهُوَ حَقُّ الْيَقِينِ",
          "numberInSurah": 95,
          "juz": 27
        },
        {
          "number": 5075,
          "text": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ",
          "numberInSurah": 96,
          "juz": 27
        }
      ],
      "edition": {
        "identifier": "quran-simple",
        "language": "ar",
        "name": "Simple",
        "englishName": "Simple",
        "format": "text",
        "type": "quran"
      }
    },
    {
      "number": 56,
      "name": "سورة الواقعة",
      "englishName": "Al-Waaqia",
      "englishNameTranslation": "The Inevitable",
      "revelationType": "Meccan",
      "numberOfAyahs": 96,
      "ayahs": [
        {
          "text": "In the name of God, The Most Gracious, The Dispenser of Grace:"
        },
        {
          "number": 4980,
          "text": "WHEN THAT which must come to pass [at last] comes to pass,",
          "numberInSurah": 1,
          "juz": 27
        },
        {
          "number": 4981,
          "text": "there will be nought that could give the lie to its having come to pass,",
          "numberInSurah": 2,
          "juz": 27
        },
        {
          "number": 4982,
          "text": "abasing [some], exalting [others]!",
          "numberInSurah": 3,
          "juz": 27
        },
        {
          "number": 4983,
          "text": "When the earth is shaken with a shaking [severe],",
          "numberInSurah": 4,
          "juz": 27
        },
        {
          "number": 4984,
          "text": "and the mountains are shattered into [countless] shards,",
          "numberInSurah": 5,
          "juz": 27
        },
        {
          "number": 4985,
          "text": "so that they become as scat­tered dust –",
          "numberInSurah": 6,
          "juz": 27
        },
        {
          "number": 4986,
          "text": "[on that Day,] then, shall you be [divided into] three kinds.",
          "numberInSurah": 7,
          "juz": 27
        },
        {
          "number": 4987,
          "text": "Thus, there shall be such as will have attained to what is right: oh, how [happy] will be they who have attained to what is right!",
          "numberInSurah": 8,
          "juz": 27
        },
        {
          "number": 4988,
          "text": "And there shall be such as will have lost them­selves in evil: oh, how [unhappy] will be they who have lost themselves in evil!",
          "numberInSurah": 9,
          "juz": 27
        },
        {
          "number": 4989,
          "text": "But the foremost shall be [they who in life were] the foremost [in faith and good works]:",
          "numberInSurah": 10,
          "juz": 27
        },
        {
          "number": 4990,
          "text": "they who were [always] drawn close unto God!",
          "numberInSurah": 11,
          "juz": 27
        },
        {
          "number": 4991,
          "text": "In gardens of bliss [will they dwell] -",
          "numberInSurah": 12,
          "juz": 27
        },
        {
          "number": 4992,
          "text": "a good many of those of olden times,",
          "numberInSurah": 13,
          "juz": 27
        },
        {
          "number": 4993,
          "text": "but [only] a few of later times.",
          "numberInSurah": 14,
          "juz": 27
        },
        {
          "number": 4994,
          "text": "[They will be seated] on gold-encrusted thrones of happiness,",
          "numberInSurah": 15,
          "juz": 27
        },
        {
          "number": 4995,
          "text": "reclining upon them, facing one another [in love].",
          "numberInSurah": 16,
          "juz": 27
        },
        {
          "number": 4996,
          "text": "Immortal youths will wait upon them",
          "numberInSurah": 17,
          "juz": 27
        },
        {
          "number": 4997,
          "text": "with goblets, and ewers, and cups filled with water from unsullied springs",
          "numberInSurah": 18,
          "juz": 27
        },
        {
          "number": 4998,
          "text": "by which their minds will not be clouded and which will not make them drunk;",
          "numberInSurah": 19,
          "juz": 27
        },
        {
          "number": 4999,
          "text": "and with fruit of any kind that they may choose,",
          "numberInSurah": 20,
          "juz": 27
        },
        {
          "number": 5000,
          "text": "and with the flesh of any fowl that they may desire.",
          "numberInSurah": 21,
          "juz": 27
        },
        {
          "number": 5001,
          "text": "And [with them will be their] companions pure, most beautiful of eye,",
          "numberInSurah": 22,
          "juz": 27
        },
        {
          "number": 5002,
          "text": "like unto pearls [still] hidden in their shells.",
          "numberInSurah": 23,
          "juz": 27
        },
        {
          "number": 5003,
          "text": "[And this will be] a reward for what they did [in life].",
          "numberInSurah": 24,
          "juz": 27
        },
        {
          "number": 5004,
          "text": "No empty talk will they hear there, nor any call to sin,",
          "numberInSurah": 25,
          "juz": 27
        },
        {
          "number": 5005,
          "text": "but only the tiding of inner soundness and peace.",
          "numberInSurah": 26,
          "juz": 27
        },
        {
          "number": 5006,
          "text": "NOW AS FOR those who have attained to righteous­ness - what of those who have attained to righteous­ness?",
          "numberInSurah": 27,
          "juz": 27
        },
        {
          "number": 5007,
          "text": "[They, too, will find themselves] amidst fruit- laden lote-trees,",
          "numberInSurah": 28,
          "juz": 27
        },
        {
          "number": 5008,
          "text": "and acacias flower-clad,",
          "numberInSurah": 29,
          "juz": 27
        },
        {
          "number": 5009,
          "text": "and shade extended,",
          "numberInSurah": 30,
          "juz": 27
        },
        {
          "number": 5010,
          "text": "and waters gushing,",
          "numberInSurah": 31,
          "juz": 27
        },
        {
          "number": 5011,
          "text": "and fruit abounding,",
          "numberInSurah": 32,
          "juz": 27
        },
        {
          "number": 5012,
          "text": "never-failing and never out of reach.",
          "numberInSurah": 33,
          "juz": 27
        },
        {
          "number": 5013,
          "text": "And [with them will be their] spouses, raised high:",
          "numberInSurah": 34,
          "juz": 27
        },
        {
          "number": 5014,
          "text": "for, behold, We shall have brought them into being in a life renewed,",
          "numberInSurah": 35,
          "juz": 27
        },
        {
          "number": 5015,
          "text": "having resurrected them as virgins,",
          "numberInSurah": 36,
          "juz": 27
        },
        {
          "number": 5016,
          "text": "full of love, well-matched",
          "numberInSurah": 37,
          "juz": 27
        },
        {
          "number": 5017,
          "text": "with those who have attained to righteousness:",
          "numberInSurah": 38,
          "juz": 27
        },
        {
          "number": 5018,
          "text": "a good many of olden times,",
          "numberInSurah": 39,
          "juz": 27
        },
        {
          "number": 5019,
          "text": "and a good many of later times.",
          "numberInSurah": 40,
          "juz": 27
        },
        {
          "number": 5020,
          "text": "BUT AS FOR those who have persevered in evil - what of those who have persevered in evil?",
          "numberInSurah": 41,
          "juz": 27
        },
        {
          "number": 5021,
          "text": "[They will find themselves] in the midst of scorching winds, and burning despair,",
          "numberInSurah": 42,
          "juz": 27
        },
        {
          "number": 5022,
          "text": "and the shadows of black smoke -",
          "numberInSurah": 43,
          "juz": 27
        },
        {
          "number": 5023,
          "text": "[shadows] neither cooling nor soothing.",
          "numberInSurah": 44,
          "juz": 27
        },
        {
          "number": 5024,
          "text": "For, behold, in times gone by they were wont to abandon themselves wholly to the pursuit of pleasures,",
          "numberInSurah": 45,
          "juz": 27
        },
        {
          "number": 5025,
          "text": "and would persist in heinous sinning,",
          "numberInSurah": 46,
          "juz": 27
        },
        {
          "number": 5026,
          "text": "and would say, “What! After we have died and become mere dust and bones, shall we, forsooth, be raised from the dead? -",
          "numberInSurah": 47,
          "juz": 27
        },
        {
          "number": 5027,
          "text": "and perhaps, too, our forebears of old?”",
          "numberInSurah": 48,
          "juz": 27
        },
        {
          "number": 5028,
          "text": "Say: “Verily, those of olden times and those of later times",
          "numberInSurah": 49,
          "juz": 27
        },
        {
          "number": 5029,
          "text": "will indeed be gathered together at an appointed time on a Day known [only to God]:",
          "numberInSurah": 50,
          "juz": 27
        },
        {
          "number": 5030,
          "text": "and then, verily, O you who have gone astray and called the truth a lie,",
          "numberInSurah": 51,
          "juz": 27
        },
        {
          "number": 5031,
          "text": "you will indeed have to taste of the tree of deadly fruit,",
          "numberInSurah": 52,
          "juz": 27
        },
        {
          "number": 5032,
          "text": "and will have to fill your bellies therewith,",
          "numberInSurah": 53,
          "juz": 27
        },
        {
          "number": 5033,
          "text": "and will thereupon have to drink [many a draught] of burning despair -",
          "numberInSurah": 54,
          "juz": 27
        },
        {
          "number": 5034,
          "text": "drink it as the most insatiably thirsty camels drink!”",
          "numberInSurah": 55,
          "juz": 27
        },
        {
          "number": 5035,
          "text": "Such will be their welcome on Judgment Day!",
          "numberInSurah": 56,
          "juz": 27
        },
        {
          "number": 5036,
          "text": "WE who have created you, [O men:] why, then, do you not accept the truth?",
          "numberInSurah": 57,
          "juz": 27
        },
        {
          "number": 5037,
          "text": "Have you ever considered that [seed] which you emit?",
          "numberInSurah": 58,
          "juz": 27
        },
        {
          "number": 5038,
          "text": "Is it you who create it - or are We the source of its creation?",
          "numberInSurah": 59,
          "juz": 27
        },
        {
          "number": 5039,
          "text": "We have [indeed] decreed that death shall be [ever-present] among you: but there is nothing to prevent Us",
          "numberInSurah": 60,
          "juz": 27
        },
        {
          "number": 5040,
          "text": "from changing the nature of your existence and bringing you into being [anew] in a manner [as yet] unknown to you.",
          "numberInSurah": 61,
          "juz": 27
        },
        {
          "number": 5041,
          "text": "And [since] you are indeed aware of the [miracle of your] coming into being in the first instance - why, then, do you not bethink yourselves [of Us]?",
          "numberInSurah": 62,
          "juz": 27
        },
        {
          "number": 5042,
          "text": "Have you ever considered the seed which you cast upon the soil?",
          "numberInSurah": 63,
          "juz": 27
        },
        {
          "number": 5043,
          "text": "Is it you who cause it to grow - or are We the cause of its growth?",
          "numberInSurah": 64,
          "juz": 27
        },
        {
          "number": 5044,
          "text": "[For,] were it Our will, We could indeed turn it into chaff, and you would be left to wonder [and to lament],",
          "numberInSurah": 65,
          "juz": 27
        },
        {
          "number": 5045,
          "text": "“Verily, we are ruined!",
          "numberInSurah": 66,
          "juz": 27
        },
        {
          "number": 5046,
          "text": "Nay, but we have been deprived [of our livelihood]!”",
          "numberInSurah": 67,
          "juz": 27
        },
        {
          "number": 5047,
          "text": "Have you ever considered the water which you drink?",
          "numberInSurah": 68,
          "juz": 27
        },
        {
          "number": 5048,
          "text": "Is it you who cause it to come down from the clouds - or are We the cause of its coming down?",
          "numberInSurah": 69,
          "juz": 27
        },
        {
          "number": 5049,
          "text": "[It comes down sweet - but] were it Our will, We could make it burningly salty and bitter: why, then, do you not give thanks [unto Us]?",
          "numberInSurah": 70,
          "juz": 27
        },
        {
          "number": 5050,
          "text": "Have you ever considered the fire which you kindle?",
          "numberInSurah": 71,
          "juz": 27
        },
        {
          "number": 5051,
          "text": "Is it you who have brought into being the tree that serves as its fuel - or are We the cause of its coming into being?",
          "numberInSurah": 72,
          "juz": 27
        },
        {
          "number": 5052,
          "text": "It is We who have made it a means to remind [you of Us], and a comfort for all who are lost and hungry in the wilderness [of their lives].",
          "numberInSurah": 73,
          "juz": 27
        },
        {
          "number": 5053,
          "text": "Extol, then, the limitless glory of thy Sus­tainer’s mighty name!",
          "numberInSurah": 74,
          "juz": 27
        },
        {
          "number": 5054,
          "text": "NAY, I call to witness the coming-down in parts [of this Qur’an]",
          "numberInSurah": 75,
          "juz": 27
        },
        {
          "number": 5055,
          "text": "and, behold, this is indeed a most solemn affirmation, if you but knew it!",
          "numberInSurah": 76,
          "juz": 27
        },
        {
          "number": 5056,
          "text": "Behold, it is a truly noble discourse,",
          "numberInSurah": 77,
          "juz": 27
        },
        {
          "number": 5057,
          "text": "[conveyed unto man] in a well-guarded divine writ",
          "numberInSurah": 78,
          "juz": 27
        },
        {
          "number": 5058,
          "text": "which none but the pure [of heart] can touch:",
          "numberInSurah": 79,
          "juz": 27
        },
        {
          "number": 5059,
          "text": "a revelation from the Sustainer of all the worlds!",
          "numberInSurah": 80,
          "juz": 27
        },
        {
          "number": 5060,
          "text": "Would you, now, look down with disdain on a tiding like this,",
          "numberInSurah": 81,
          "juz": 27
        },
        {
          "number": 5061,
          "text": "and make it your daily bread [as it were] to call the truth a lie?",
          "numberInSurah": 82,
          "juz": 27
        },
        {
          "number": 5062,
          "text": "Why, then, when [the last breath] comes up to the throat [of a dying man],",
          "numberInSurah": 83,
          "juz": 27
        },
        {
          "number": 5063,
          "text": "the while you are [helplessly] looking on -",
          "numberInSurah": 84,
          "juz": 27
        },
        {
          "number": 5064,
          "text": "and while We are closer to him than you, although you see [Us] not -:",
          "numberInSurah": 85,
          "juz": 27
        },
        {
          "number": 5065,
          "text": "why, then, if [you think that] you are not truly dependent [on Us],",
          "numberInSurah": 86,
          "juz": 27
        },
        {
          "number": 5066,
          "text": "can you not cause that [ebbing life] to return - if what you claim is true?",
          "numberInSurah": 87,
          "juz": 27
        },
        {
          "number": 5067,
          "text": "[ALL OF YOU are destined to die.] Now if one happens to be of those who are drawn close unto God,",
          "numberInSurah": 88,
          "juz": 27
        },
        {
          "number": 5068,
          "text": "happiness [awaits him in the life to come], and inner fulfillment, and a garden of bliss.",
          "numberInSurah": 89,
          "juz": 27
        },
        {
          "number": 5069,
          "text": "And if one happens to be of those who have attained to righteousness,",
          "numberInSurah": 90,
          "juz": 27
        },
        {
          "number": 5070,
          "text": "[he, too, will be wel­comed into paradise with the words,] “Peace be unto thee [that art] of those who have attained to right­eousness!”",
          "numberInSurah": 91,
          "juz": 27
        },
        {
          "number": 5071,
          "text": "But if one happens to be of those who are wont to call the truth a lie, and [thus] go astray,",
          "numberInSurah": 92,
          "juz": 27
        },
        {
          "number": 5072,
          "text": "a welcome of burning despair [awaits him in the life to come,]",
          "numberInSurah": 93,
          "juz": 27
        },
        {
          "number": 5073,
          "text": "and the heat of a blazing fire!",
          "numberInSurah": 94,
          "juz": 27
        },
        {
          "number": 5074,
          "text": "Verily, this is indeed the truth of truths!",
          "numberInSurah": 95,
          "juz": 27
        },
        {
          "number": 5075,
          "text": "Extol, then, the limitless glory of thy Sus­tainer’s mighty name!",
          "numberInSurah": 96,
          "juz": 27
        }
      ],
      "edition": {
