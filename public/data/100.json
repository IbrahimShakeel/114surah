  "data": [
    {
      "number": 100,
      "name": "سورة العاديات",
      "englishName": "Al-Aadiyaat",
      "englishNameTranslation": "The Chargers",
      "revelationType": "Meccan",
      "numberOfAyahs": 11,
      "ayahs": [
        {
          "number": 6147,
          "text": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ ",
          "numberInSurah": 1,
          "juz": 30
        },
        {
          "number": 6147,
          "text": "وَالْعَادِيَاتِ ضَبْحًا",
          "numberInSurah": 1,
          "juz": 30
        },
        {
          "number": 6148,
          "text": "فَالْمُورِيَاتِ قَدْحًا",
          "numberInSurah": 2,
          "juz": 30
        },
        {
          "number": 6149,
          "text": "فَالْمُغِيرَاتِ صُبْحًا",
          "numberInSurah": 3,
          "juz": 30
        },
        {
          "number": 6150,
          "text": "فَأَثَرْنَ بِهِ نَقْعًا",
          "numberInSurah": 4,
          "juz": 30
        },
        {
          "number": 6151,
          "text": "فَوَسَطْنَ بِهِ جَمْعًا",
          "numberInSurah": 5,
          "juz": 30
        },
        {
          "number": 6152,
          "text": "إِنَّ الْإِنْسَانَ لِرَبِّهِ لَكَنُودٌ",
          "numberInSurah": 6,
          "juz": 30
        },
        {
          "number": 6153,
          "text": "وَإِنَّهُ عَلَىٰ ذَٰلِكَ لَشَهِيدٌ",
          "numberInSurah": 7,
          "juz": 30
        },
        {
          "number": 6154,
          "text": "وَإِنَّهُ لِحُبِّ الْخَيْرِ لَشَدِيدٌ",
          "numberInSurah": 8,
          "juz": 30
        },
        {
          "number": 6155,
          "text": "۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِي الْقُبُورِ",
          "numberInSurah": 9,
          "juz": 30
        },
        {
          "number": 6156,
          "text": "وَحُصِّلَ مَا فِي الصُّدُورِ",
          "numberInSurah": 10,
          "juz": 30
        },
        {
          "number": 6157,
          "text": "إِنَّ رَبَّهُمْ بِهِمْ يَوْمَئِذٍ لَخَبِيرٌ",
          "numberInSurah": 11,
          "juz": 30
        }
      ],
      "edition": {
        "identifier": "quran-simple",
        "language": "ar",
        "name": "Simple",
        "englishName": "Simple",
        "format": "text",
        "type": "quran"
      }
    },
    {
      "number": 100,
      "name": "سورة العاديات",
      "englishName": "Al-Aadiyaat",
      "englishNameTranslation": "The Chargers",
      "revelationType": "Meccan",
      "numberOfAyahs": 11,
      "ayahs": [
        {
          "text": "In the name of God, The Most Gracious, The Dispenser of Grace:"
        },
        {
          "number": 6147,
          "text": "Oh, the chargers that run panting,",
          "numberInSurah": 1,
          "juz": 30
        },
        {
          "number": 6148,
          "text": "sparks of fire striking,",
          "numberInSurah": 2,
          "juz": 30
        },
        {
          "number": 6149,
          "text": "rushing to assault at morn,",
          "numberInSurah": 3,
          "juz": 30
        },
        {
          "number": 6150,
          "text": "thereby raising clouds of dust,",
          "numberInSurah": 4,
          "juz": 30
        },
        {
          "number": 6151,
          "text": "thereby storming [blindly] into any host!",
          "numberInSurah": 5,
          "juz": 30
        },
        {
          "number": 6152,
          "text": "VERILY, towards his Sustainer man is most ungrateful",
          "numberInSurah": 6,
          "juz": 30
        },
        {
          "number": 6153,
          "text": "and to this, behold, he [himself] bears witness indeed:",
          "numberInSurah": 7,
          "juz": 30
        },
        {
          "number": 6154,
          "text": "for, verily, to the love of wealth is he most ardently devoted.",
          "numberInSurah": 8,
          "juz": 30
        },
        {
          "number": 6155,
          "text": "But does he not know that [on the Last Day,] when all that is in the graves is raised and brought out,",
          "numberInSurah": 9,
          "juz": 30
        },
        {
          "number": 6156,
          "text": "and all that is [hidden] in men's hearts is bared",
          "numberInSurah": 10,
          "juz": 30
        },
        {
          "number": 6157,
          "text": "that on that Day their Sustainer [will show that He] has always been fully aware of them?",
          "numberInSurah": 11,
          "juz": 30
        }
      ],
      "edition": {
        "identifier": "en.asad",
        "language": "en",
        "name": "Asad",
        "englishName": "Muhammad Asad",
        "format": "text",
        "type": "translation"
      }
    }
  ]
}